{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"paths": {
			"@/*": ["./src/*"],
			"@/assets/*": ["./src/assets/*"],
			"@/components/*": ["./src/components/*"],
			"@/components/button": ["src/components/Button/Button"],
			"@/components/heading": ["src/components/Heading/Heading"],
			"@/components/hero": ["src/components/Hero/Hero"],
			"@/components/logo": ["src/components/Logo/Logo"],
			"@/components/navbar": ["src/components/Navbar/Navbar"],
			"@/components/navbarLink": ["src/components/NavbarLink/NavbarLink"],
			"@/components/navbarMenu": ["src/components/NavbarMenu/NavbarMenu"],
			"@/components/text": ["src/components/Text/Text"],
			"@/data/*": ["src/data/*"],
			"@/data/landingPageLinks": ["src/data/LandingPageLinks.ts"],
			"@/utils/*": ["./src/utils/*"]
		},
		"baseUrl": "."
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
