{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"paths": {
			"@/*": ["./src/*"],
			"@/assets/*": ["./src/assets/*"],
			"@/components/*": ["./src/components/*"],
			"@/contexts/*": ["./src/contexts/*"],
			"@/data/*": ["./src/data/*"],
			"@/hooks/*": ["./src/hooks/*"],
			"@/styles/*": ["./src/styles/*"],
			"@/utils/*": ["./src/utils/*"]
		},
		"baseUrl": "."
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "prettier.config.js"],
	"exclude": ["node_modules"]
}
